<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/location.css">
    <title>Halfway Locations</title>
</head>
<body>
    <header>
        <nav>
            <i class="fas fa-bars"></i>
            <h3>Halfway There</h3>
            <i class="fas fa-ellipsis-v"></i>
        </nav>
    </header>

    <main>
        <div class="deck-container">
            <% locations.forEach((location) => { %>
            <div class="card-container">
                <div class="pop">
                    <button onclick="myFunc('<%- location.id %>')">
                        <h2><%= location.name %></h2>
                        <div><p><%= location.rating %></p></div>
                    </button>
                </div>
                <div class="popup-container" id= "<%- location.id %>">
                    <div class="popup">
                        <h2><%= location.name %></h2>
                        <h3><%= location.isClosed %></h3>
                        <img src="<%-location.img_url %>" alt="location image">
                        <h4><%= location.info %></h4>
                        <h4><%= location.address %></h4>
                        <p><%= location.rating %></p>
                        <p><%= location.price %></p>
                        <p><%= location.phone %></p>
                        


                        <button onclick="closePop('<%- location.id %>')">Back</button>
                    </div>
                </div>

            </div>
            
            <%});%>
        </div>

        <script>
        console.log(location)
             
        var myFunc = function(type){
            // console.log('hi');
            var btn = document.getElementById(type) 
            btn.classList.add("isvisable");
        }
    
        var closePop = function(type){
        //    if(event.currentTarget === event.target){
            var btn = document.getElementById(type) 
            btn.classList.remove("isvisable")
        //    }
        }
        </script>
    </main>


    <footer></footer>
    
</body>
</html>




     
   